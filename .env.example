# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=login_permissions_db
DB_USER=your_database_user
DB_PASSWORD=your_secure_database_password

# JWT Security Configuration (REQUIRED - Generate new values for production)
SECRET_KEY=your-super-secure-secret-key-here-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin Account (REQUIRED - Change these values immediately after setup)
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=secure_admin_password_change_immediately

# Application Configuration
APP_NAME=HR Management System
DEBUG=false
BASE_URL=http://localhost:8000

# SAML Configuration (Optional - set SAML_ENABLED=true to enable)
SAML_ENABLED=false
AZURE_TENANT_ID=your_azure_tenant_id_here
AZURE_SAML_CERTIFICATE=your_azure_saml_certificate_here


# Additional Security Settings (Optional but recommended for production)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=300
SESSION_TIMEOUT=3600
BCRYPT_ROUNDS=12

# Production Environment Variables (Uncomment and configure for production)
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20
# REDIS_URL=redis://localhost:6379/0
# SMTP_SERVER=smtp.yourprovider.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@yourcompany.com
# SMTP_PASSWORD=your_email_password
# LOG_LEVEL=INFO
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
